{
  "manifest_version": 2,
  "name": "TimeShift – Instant Timezone Converter",
  "version": "1.0.1",
  "description": "Convert any time to any timezone instantly. Right-click any time on any page — TimeShift converts it including day changes.",
  "author": "Sheikh Abir Ali",

  "browser_specific_settings": {
    "gecko": {
      "id": "timeshift@sheikhabirali.com",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    },
    "gecko_android": {
      "strict_min_version": "142.0"
    }
  },

  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "tabs",
    "<all_urls>"
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "TimeShift",
    "default_icon": {
      "16":  "icons/icon16.png",
      "32":  "icons/icon32.png",
      "48":  "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "scripts": ["timezones.js", "background.js"],
    "persistent": false
  },

  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    "timezones.js",
    "content.js",
    "content.css"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'"
}
